---
import { mdToHtml } from '../utils/markdown'

interface Props {
  data: CMS.Card
}

const { data } = Astro.props as Props
const { image, title, subtitle, content } = data

const contentHtml = mdToHtml(content)
---

<article>
  <div class='bg'></div>
  <img src={Astro.resolve(image.src)} alt={image.alt} />

  <main>
    <h3>{title}</h3>
    <p>{subtitle}</p>

    {contentHtml}
  </main>
</article>

<style lang='scss'>
  article {
    display: grid;
    grid-template-rows: 1fr 1fr auto;
    text-align: center;
  }

  article > * {
    grid-column: 1;
  }

  .bg {
    grid-row: 2 / 4;
    background: var(--rainbow-gradient-light);
    width: 100%;
    height: 100%;
  }

  img {
    grid-row: 1 / 3;
    width: 50vw;
    max-width: 200px;
    justify-self: center;
    filter: var(--drop-shadow-lg);
    aspect-ratio: 1;
    border-radius: 999px;
  }

  main {
    grid-row: 3 / 4;
    margin: var(--spacer-md) var(--spacer-sm);
  }

  h3 {
    margin: 0;
    font-family: var(--font-family-base);
    font-weight: 400;
    text-transform: capitalize;
    text-align: center;
  }

  h3, p {
    font-weight: 700;
  }
</style>