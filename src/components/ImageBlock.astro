---
import Hummingbird from './Hummingbird.astro'

interface Props {
  title: string
  subtitle: string | undefined
  subtitleIcon: boolean
  image: {
    alt: string
    src: string
  }
  cta: {
    title: string
    href: string
  }
  muted: boolean
}

const { title, subtitle, subtitleIcon, image, cta, muted } = Astro.props as Props
---

<section class={muted && 'muted'}>
  <div class='bg'></div>
  <img alt={image.alt} src={image.src} />

  <main>
    {(title || subtitle) && (
      <h2 class={subtitle ? 'h5' : 'h3'}>
        {subtitle || title}
        {subtitle && subtitleIcon && (
          <Hummingbird width='3rem' height='3rem' theme='secondary' />
        )}
      </h2>
    )}

    {(title && subtitle && (
      <h3>{title}</h3>
    ))}

    <slot />
  </main>
</section>

<style lang='scss'>
  section {
    display: grid;
    grid-template-rows: 1fr 1fr auto;
  }

  section > * {
    grid-column: 1;
  }

  img {
    grid-row: 1 / 3;
    width: 67vw;
    max-width: 300px;
    justify-self: center;
    filter: var(--drop-shadow-lg);
  }

  .bg {
    grid-row: 2 / 4;
    background: var(--chisel-primary-light);
    width: 100%;
    height: 100%;
  }

  section.muted .bg {
    background: var(--chisel-neutral-200);
  }

  main {
    grid-row: 3;
    padding: var(--spacer-md);

    & :global(ul) {
      list-style: none;
      margin: 0;
    }

    & :global(li) {
      position: relative;
      margin-left: 3ch;

      &:not(:last-child) {
        margin-bottom: var(--spacer-sm);
      }

      &:before {
        content: 'X';
        position: absolute;
        left: -1.5ch;
        top: 50%;
        transform: translate(0, -50%);
        font-size: var(--chisel-h3);
        font-family: var(--font-family-display);
      }
    }
  }

  .h5 :global(svg) {
    margin-left: var(--spacer-sm);
  }
</style>