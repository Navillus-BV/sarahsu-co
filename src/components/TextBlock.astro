---
import Hummingbird from './Hummingbird.astro'
import { mdToHtml } from '../utils/markdown'

interface Props {
  data: CMS.TextBlock
}

const { data } = Astro.props as Props
const { title, subtitle, content, cta } = data

const contentHtml = mdToHtml(content)
---

<section>
  <h2>{title}</h2>
  {subtitle && (
    <h3>{subtitle}</h3>
  )}

  <Hummingbird width="6rem" height="6rem" theme="gradient" opacity="0.5" />

  <main>
    {contentHtml}
  </main>

  {cta && (
    <a class="button" href={cta.url}>{cta.text}</a>
  )}
</section>

<style lang="scss">
  section {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }

  section :global(svg) {
    transform: scaleX(-1);
    margin: var(--spacer-sm) 0;
  }

  h2, h3 {
    margin: 0;
  }

  h3 {
    margin-top: var(--spacer-xs);
    font-size: 1rem;
    font-family: var(--font-family-base);
    font-weight: 400;
    text-transform: uppercase;
  }

  main {
    max-width: var(--width-prose);
  }

  .button {
    margin-top: var(--spacer-sm);
  }
</style>