---
import Hummingbird from './Hummingbird.astro'
import menu from '../data/menu.json'
import site from '../data/site.json'
import { getPages } from '../utils/pages'

interface Props {
  pathname: string
}

const allPages = Astro.fetchContent('../data/pages/*.md')

const pages = getPages(allPages, menu.pages)
  .map(({ title, href }) => ({ title, href }))

const { pathname } = Astro.props as Props
---

<header class='container'>
  <div class='header'>
    <a href='/' class='h5' rel='home'>
      <Hummingbird width='2.5em' height='2.5em' opacity='.3' />
      {site.title}
    </a>

    <input type="checkbox" id="menubtn" class="sr-only" />
    <label role="button" for="menubtn" class="button">
      <span></span>
    </label>

    <nav>
      <ul>
        {pages.map(({ title, href }) => (
          <li>
            <a href={href}>{title}</a>
          </li>
        ))}
      </ul>
    </nav>
  </div>
</header>

<style lang='scss'>
  header {
    position: sticky;
    top: 0;
    background: var(--chisel-neutral-50);
    z-index: 100;
    filter: var(--drop-shadow);
  }

  .header {
    display: grid;
    grid-template-columns: auto 1fr auto;
    grid-template-areas: 'brand . menu' 'nav nav nav';
    align-items: center;
    justify-content: space-between;
    padding: var(--spacer-sm) 0;
  }

  a {
    text-decoration: none;
  }

  [rel=home] {
    grid-area: brand;
    position: relative;
    color: var(--chisel-primary);
  }

  [rel=home] :global(svg) {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -55%) scaleX(-1);
    z-index: -1;
  }

  label[for=menubtn] {
    grid-area: menu;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    height: var(--spacer-md);
    width: var(--spacer-md);
    border-radius: 999px;
    padding: 0;
    margin: 0;
    background: var(--chisel-neutral-50);
    border-color: transparent;

    &:before {
      content: '';
      position: absolute;
      top: 0;
      right: 0;
      bottom: 0;
      left: 0;
      z-index: -1;
      border-radius: inherit;
      background: var(--rainbow-gradient);
      margin: -4px;
      filter: var(--drop-shadow);
    }

    & span {
      width: 67%;
      height: 1px;
      background: var(--chisel-primary);
    }

    & span:before, & span:after {
      content: '';
      display: block;
      width: 100%;
      height: 1px;
      background: var(--chisel-primary);
    }

    & span:before {
      transform: translateY(-.5em);
    }

    & span:after {
      transform: translateY(calc(.5em - 2px));
    }
  }

  nav {
    display: none;
    grid-area: nav;

    & ul {
      list-style: none;
      text-align: center;
      margin: 0;
    }
    
    & a {
      display: block;
      font-size: var(--chisel-h5);
      padding: var(--spacer-tiny) 0;
      text-transform: uppercase;
    }
  }

  #menubtn:checked ~ nav {
    display: block;
  }

  @media screen and (min-width: 640px) {
    #menubtn, label[for=menubtn] {
      display: none;
    }

    .header {
      grid-template-areas: 'brand . nav';
    }

    nav {
      display: block;

      & ul {
        display: flex;
        padding: 0;
      }

      & a {
        font-size: var(--chisel-p);
        padding: var(--spacer-sm);

        &:last-child {
          padding-right: 0;
        }
      }
    }
  }

  @media screen and (min-width: 979px) {
    [rel=home] {
      font-size: var(--chisel-h4);
    }

    nav a {
      padding: var(--spacer-sm) var(--spacer-md);
      
      &:last-child {
        padding-right: 0;
      }
    }
  }
</style>